
.page-heading
	font-size: 50px
	font-weight: bold
	line-height 1.2
	margin 0 20px 50px
	text-align: center
	max-width 800px
	@media (min-width breakpoint-tablet)
		font-size 70px
		margin-bottom: 150px
	@media (min-width breakpoint-navigation)
		margin-left: auto
		margin-right: @margin-left
	&.left
		text-align: left
	&.small
		@media (min-width breakpoint-tablet)
			font-size 60px
