.image-full-width
.image-team
	background-color the-team-background
	margin-bottom: 200px
	position relative
	text-align: center
.image-full-width
	background-color #fff
.image-full-width-image
.image-team-image
	display: block
	width 100%
.image-full-width-link
.image-team-link
	background-color #fff
	border-radius 24px
	box-shadow the-shadow
	display: inline-block
	font-weight 300
	padding .4em 2em
	position absolute
	bottom 0
	left 50%
	transform translate(-50%, 50%)
	text-decoration none
	white-space: nowrap
