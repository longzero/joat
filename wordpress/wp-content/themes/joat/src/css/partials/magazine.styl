.listing-magazine
	margin: 0 20px 100px
	max-width site-width
	@media (min-width breakpoint-ipad)
		display flex
		justify-content space-between
		flex-wrap wrap
	@media (min-width breakpoint-site-width + 40px)
		margin-left: auto
		margin-right: auto
	&::after
		content ''
		@media (min-width breakpoint-ipad)
			flex-basis calc(100% / 2 - 15px)
			width @flex-basis
		@media (min-width breakpoint-large)
			flex-basis calc(100% / 3 - 20px)
			width @flex-basis
	.card
		flex-grow: 0
		flex-shrink: 0
		margin 0 auto 100px
		@media (min-width breakpoint-ipad-landscape)
			flex-basis calc(100% / 2 - 15px)
			margin-left: 0
			margin-right: 0
			width @flex-basis
		@media (min-width breakpoint-large)
			flex-basis calc(100% / 3 - 20px)
			width @flex-basis
	.card-top
		@media (min-width breakpoint-large)
			font-size 25px

.magazine-2-3
