	flex-basis 100%
	flex-grow: 0
	flex-shrink: 0
	margin-right: 30px
	width @flex-basis
	@media (min-width breakpoint-ipad)
		display flex
		justify-content: space-between
		flex-wrap wrap
	@media (min-width breakpoint-large)
		flex-basis calc(100% / 3 * 2 - 30px)
		width @flex-basis
	.card
		content ''
		flex-grow: 0
		flex-shrink: 0
		margin 0 auto 100px
		@media (min-width breakpoint-ipad)
			flex-basis calc(100% / 2 - 15px)
			margin-left 0
			margin-right: 0
			width @flex-basis

.magazine-hashtags-link
	display: inline-block
	font-style italic
	font-weight 400
	line-height 1.2 // This helps to position the highlight created with ::after
	position relative
	text-decoration none
	&::after
		background: the-hover;
		content: '';
		position: absolute;
		bottom: 0;
		left: -5px;
		z-index: -1;
		transform: scale3d(0,1,1);
		transform-origin: 0% 50%;
		transition: transform 0.2s cubic-bezier(0.390, 0.575, 0.565, 1.000);
		width: calc(100% + 10px);
		height: 100%
	&:hover
		&::after
			transform: scale3d(1,1,1)
.magazine-heading
