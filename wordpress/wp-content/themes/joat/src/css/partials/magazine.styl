	margin-bottom: 35px
	text-transform: none

.magazine-navigation
	margin-left: auto
	margin-right: auto
	margin-bottom: 200px
	text-align: center
	max-width 730px
.magazine-navigation-link
	display inline-block
	font-family font-magazine-heading
	font-size 30px
	font-style: italic
	font-weight 400
	line-height 1
	margin 0 .4em .8em
	position relative
	text-decoration none
	white-space: nowrap
	&::after
		content ''
		opacity 0
		position absolute
		left 50%
		bottom 0
		z-index -1
		transform translateX(-50%)
		transform-origin: bottom
		transition .3s
		width calc(100% + 20px)
		height 1px
	&:hover
	&.active
		&::after
			background-color the-hover
			opacity 1
			transform translateX(-50%) scaleY(15)
	&.advertising
		&:hover::after
		&::after
			background-color the-advertising
