.section-sidebar
	position: relative
	&:after
		border-top 1px solid color-1
		border-bottom 1px solid color-2
		content ''
		display: block
		position absolute
		bottom 0
		left calc(50% + 20px)
		transform: translateX(-50%) skew(80deg)
		max-width: site-width
		width calc(100% - 100px)
		height: 15px
		@media (min-width: breakpoint-large)
			width calc(100% - 40px)
