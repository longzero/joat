.filter-nav-link
	margin-left: .4em
	margin-right: @margin-left
	margin-bottom: .6em
	position relative
	text-decoration none
	// @media (min-width breakpoint-large)
	// 	margin-left: 0
	// 	margin-right: 0
	// 	margin-bottom: 0
	&:first-child
		padding-left 0
	&:last-child
		padding-right 0
	&::after
		content ''
		opacity 0
		position absolute
		left 50%
		bottom 0
		z-index -1
		transform translateX(-50%)
		transform-origin: bottom
		transition .3s
		width calc(100% + 20px)
		height 1px
	&:hover
	&.active
		&::after
			background-color the-hover
			opacity 1
			transform translateX(-50%) scaleY(15)
	&.advertising
		&:hover::after
		&::after
			background-color the-advertising
	&.beaute
	&.beauty
	&.content
	&.content-en
		&:hover::after
		&::after
			background-color the-beauty
	&.commerce
		&:hover::after
		&::after
			background-color the-commerce
	&.conferences
		&:hover::after
		&::after
			background-color the-conferences
	&.divertissement
		&:hover::after
		&::after
			background-color the-divertissement
	&.grande-conso
		&:hover::after
		&::after
			background-color the-grande-conso
	&.influence
	&.influences
	&.influences-en
	&.influences-en-2
		&:hover::after
		&::after
			background-color the-influence
	&.international
		&:hover::after
		&::after
			background-color the-international
	&.media
	&.media-en
	&.media-fr
	&.medias-en
	&.medias-fr
	&.mode
		&:hover::after
		&::after
			background-color the-mode
	&.pr
	&.public-relations-en
	&.relations-publiques
		&:hover::after
		&::after
			background-color the-pr
	&.production
		&:hover::after
		&::after
			background-color the-production
	&.strategy
		&:hover::after
		&::after
			background-color the-strategy
	&.telecommunication
		&:hover::after
		&::after
			background-color the-telecommunication
	&.trends
		&:hover::after
		&::after
			background-color the-trends


.filter-navigation
	display flex
	justify-content: center
	flex-wrap: wrap
	font-size 35px
	font-weight bold
	line-height 1
	margin-bottom: calc(100px - .6em) // Adds up to 100px
	text-align: center
	@media (min-width breakpoint-large)
		// justify-content: space-between
		margin-bottom: 100px
.filter-navigation--talents
	margin-left: auto
	margin-right auto
	max-width 790px
	.filter-nav-link
		&::after
			background-color transparent
			border-bottom 15px dashed the-hover
			width calc(100% + 40px)
			height 0
		&:hover
		&.active
			&::after
				transform translateX(-50%) scaleY(1)

// Functional CSS
.filtered-tab-content
	display none
	&.active
		display flex
		flex-wrap: wrap
		max-width none
