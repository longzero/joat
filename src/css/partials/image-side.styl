.image-side
	margin-bottom: 200px
	@media (min-width breakpoint-large)
		display flex
		align-items center

.image-side-content
	margin-left: auto
	margin-right: @margin-left
	max-width 600px
	@media (min-width breakpoint-large)
		margin-left: 0
		margin-right: @margin-left
		max-width 445px
.image-side-image
	background-position center
	background-size cover
	flex-shrink: 0
	margin-left: auto
	margin-right: @margin-left
	margin-bottom: 100px
	max-width 600px
	width 100%
	height 350px
	@media (min-width breakpoint-tablet)
		height 600px
	@media (min-width breakpoint-large)
		margin-left: 0
		margin-right: 125px
		margin-bottom: 0
		max-width 445px
