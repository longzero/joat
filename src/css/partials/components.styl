.extra-space
	margin-bottom: 200px

.load-more-container
	margin-bottom: 100px
	text-align: center
	width 100%
	@media (min-width breakpoint-tablet)
		margin-bottom: 200px
	.filtered-tab-content + &
		margin-top: -75px
		@media (min-width breakpoint-tablet)
			margin-top: -200px

.paragraph-link
	display: table
	font-style: italic
	margin: 1em auto 0
	text-decoration none

.sidebar-module
	margin-top: 30px
	margin-bottom: 50px

.site-button
	border-radius 25px
	box-shadow the-shadow
	cursor: pointer
	display inline-flex
	align-items: center
	justify-content: center
	padding 0 45px
	transition .3s
	height 50px
	&:hover
		box-shadow the-shadow-hover

.video-container
	margin-left: 20px
	margin-right: @margin-left
	margin-bottom: 200px
	@media (min-width breakpoint-ipad)
		margin-left: auto
		margin-right: @margin-left

.youtube-wrapper
	box-shadow the-shadow
	position relative
	padding-bottom 56.25%
	height 0
.youtube-iframe
	position absolute
	top 0
	left 0
	width 100%
	height 100%
