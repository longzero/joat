.site-footer
	background-color the-footer-background
	color the-footer-copy
	margin-top: 200px
	padding 1em
	text-align center
	a
		color inherit
		text-decoration none
.footer-external-link
	font-size 10px
.footer-heading
	margin-bottom: 1.2em
.footer-location
	font-style normal
	margin-bottom 2em
	@media (min-width breakpoint-mobile)
		flex-basis: 130px
		flex-shrink: 0
		order 1
		text-align: right
		width: 130px
		&:last-child
			order 3
			text-align: left
	@media (min-width breakpoint-tablet)
		flex-basis: 160px
		width: 160px
.footer-locations
	font-size 11px
	margin 0 auto
	max-width 470px
	@media (min-width breakpoint-mobile)
		display flex
.footer-logo
	display inline-block
	margin 0 auto 2em
	width 88px
	@media (min-width breakpoint-mobile)
		order 2
.footer-navigation
	font-size 15px
	margin 0 auto
	// max-width 540px // Design
	.menu-item // WP class
		display inline-block
		list-style none
		margin 0 1em .6em
.footer-social
	margin-bottom: -.6em
.footer-social-icon
	display inline-block
	fill #fff
	width 15px

.social-link
	display inline-block
	padding 0 .4em
