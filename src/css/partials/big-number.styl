.big-number
	margin-bottom: 200px
	&.right
		.big-number-image-box
			margin-left: auto
		.big-number-label
		.big-number-number
			text-align: left

.big-number-image
	background-position center
	background-size cover
	padding-bottom 100%
	width 100%
	height 0
.big-number-image-box
	position relative
	max-width 635px

.big-number-label
.big-number-number
	line-height .9
	text-align: right
.big-number-label
	font-size 40px
.big-number-number
	font-size 115px
	font-weight bold
	margin-top: -35px
	@media (min-width breakpoint-tablet)
		font-size 200px
		margin-top: -100px
	@media (min-width breakpoint-ipad)
		font-size 300px

.images-big-number
	margin-left: 20px
	margin-right: @margin-left
	@media (min-width breakpoint-ipad)
		margin-left: auto
		margin-right: @margin-left

