.fade-right {
  opacity: 0;
  transform: translateX(100px);
  transition: .4s;
  &.active {
    opacity: 1;
    transform: translateX(0);
  }
}

.fade-scale {
  opacity: 0;
  transform: scale(.7);
  transition: .4s;
  &.active {
    opacity: 1;
    transform: scale(1);
  }
}

.fade-up, // this class is linked to scrolling in JS
.fade-up-2 // this class is not linked to scrolling
{
  opacity: 0;
  transform: translateY(50px);
  transition: .8s;
  transition-timing-function: ease-in-out
  &.active {
    opacity: 1;
    transform: translateY(0);
  }
}

.rotateY {
  opacity: 1 !important;
  transform: rotateY(0deg) !important;
}


.scale-big {
  display: inline-block;
  opacity: 0;
  &.active {
    animation: scale-big .4s 0s linear forwards;
  }
}


@keyframes rotateY-in {
  0%   {
    opacity: 0;
    transform: rotateY(45deg);
  }
  100% {
    opacity: 1;
    transform: rotateY(0deg);
  }
}

@keyframes scale-big {
  0%   {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}
