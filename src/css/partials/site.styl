.content-block-heading
	text-transform: uppercase

.main-column
	@media (min-width: breakpoint-ipad)
		padding-left 100px

.important-box
	background-color rgba(0,0,0,.7)
	color #fff
	margin-left: auto
	margin-right: auto
	padding 30px //20px
	max-width: 400px
	@media (min-width: breakpoint-ipad)
		position absolute
		top 180px
		right 0

.page-section
	padding-top: 100px
	padding-bottom 100px

.page-section--sidebar
	.container
		display: grid
		@media (min-width: breakpoint-ipad)
			grid-template-columns: 160px 1fr;
		@media (min-width: breakpoint-desktop)
			grid-template-columns: 300px 1fr;

.page-section-collaborators
	img
		margin-bottom: 20px
		width 200px
	.container
		display: flex
		align-items: center
		justify-content: space-around
		flex-wrap: wrap

.page-section-media-image
	background-attachment: fixed
	background-position center
	background-repeat no-repeat
	background-size cover
	min-height: 500px

.section-title
	@extend .container
	// color #fff
	font-size 3rem
	margin-bottom: 1em
	text-align: center
	text-transform: uppercase
	width: 100%;

.site-hero
	// background-attachment: fixed
	background-position bottom
	background-repeat no-repeat
	background-size cover
	min-height: 600px
	.container
		position relative

.site-main
	> *
		color #fff
		&:nth-child(2n)
			background-color #fff
			color #000
			a
				&:hover
					color #000
					path
						fill #000

.social-item-link
	display: flex
	align-items: center
	padding-top: 10px
	padding-bottom: 10px
	text-decoration: none
	transition-duration: .3s
.social-item-media
	display: flex
	align-items: center
	justify-content: center
	margin-right: 10px
	width 30px
	height 30px
	svg
		width 30px
		height 30px
	path
		fill color-1
		transition-duration: .3s
.social-links
	display: grid
	grid-template-columns repeat(2, 1fr)
	list-style: none
	@media (min-width: breakpoint-ipad)
		grid-template-columns 1fr
