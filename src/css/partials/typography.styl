.typography
	a
		display inline-block
		position relative
		text-decoration none
		&:hover
			&:after
				transform: scaleY(6)
		&:after
			background-color the-link-underline
			content ''
			position absolute
			bottom 0
			left 0
			z-index -1
			transform-origin: center bottom
			transition-duration: .3s
			width 100%
			height 2px // Mind the transform value on hover when you change this.
	h3
		font-size 25px
		font-weight bold
		margin-bottom: 1em
	ol, ul
		padding-left 1em
