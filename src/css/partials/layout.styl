.container
	margin 0 20px
	max-width site-width
	@media (min-width breakpoint-site-width)
		margin-left: auto
		margin-right: @margin-left

.container--listing
	margin 0 auto
	max-width 720px
	@media (min-width breakpoint-large)
		max-width 920px
	+ .breadcrumbs-container
		display none

.content-width
	margin-left: 20px
	margin-right: @margin-left
	margin-bottom: 100px
	// max-width calc(100% - 100px)
	@media (min-width breakpoint-desktop)
		margin-left: auto
		margin-right: auto
		max-width 650px
