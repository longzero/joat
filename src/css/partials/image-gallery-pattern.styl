.image-gallery-pattern
	margin-left 20px
	margin-right 20px
	margin-bottom: 100px
	// max-width calc(100% - 100px)
	@media (min-width breakpoint-ipad-landscape)
		margin-left: auto
		margin-right: auto
		max-width 920px
	&.right
		.image-gallery-pattern-image
			margin-right auto
			margin-left auto
			@media (min-width breakpoint-ipad)
				margin-right 0
				margin-left: auto
			&:nth-child(2n)
				@media (min-width breakpoint-ipad)
					margin-right auto
					margin-left: 0

.image-gallery-pattern-image
	// box-shadow the-shadow
	display: block
	margin-bottom: 50px
	position relative
	@media (min-width breakpoint-ipad)
		margin-bottom: -50px
		max-width 540px
		width 70%
	@media (min-width breakpoint-ipad-landscape)
		margin-bottom: -160px
		width 100%
	&:nth-child(2n)
		@media (min-width breakpoint-ipad)
			margin-right 0
			margin-left: auto
	&:last-child
		margin-bottom: 0
	j = 10
	for i in (1..10)
		j = j - 1
		&:nth-child({i})
			z-index j

