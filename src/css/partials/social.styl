.listing-cards--social
	align-items: flex-start
	justify-content: flex-start
	margin-bottom: 100px // total of 200px with the margin-bottom of children elements
	max-width 775px
	@media (min-width breakpoint-tablet)
		display: flex
		align-items: flex-start
		flex-wrap: wrap
		margin-left: 20px
		margin-right: @margin-left
	@media (min-width breakpoint-ipad)
		margin-left: auto
		margin-right: @margin-left

.location-card--social
	display: flex
	align-items center
	justify-content: center
	font-size 20px
	margin: 0 auto 100px
	text-align: left
	text-decoration none
	@media (min-width breakpoint-tablet)
		justify-content: flex-start
		flex-basis: 50%
		flex-grow: 0
		flex-shrink: 0
		width @flex-basis
.location-icon--social
	margin: 0 1em 0 0
	@media (min-width breakpoint-mobile)
		margin 0
	svg
		width 70%
.location-icon-image--social
	width 45px
	&.facebook
		width: 25px
.location-info-line--statistics
	text-transform: uppercase
.location-info-line--username
	font-weight 300
