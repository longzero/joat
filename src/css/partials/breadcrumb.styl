.breadcrumbs-container
	margin-bottom: 100px
	position relative
	@media (min-width breakpoint-ipad-landscape)
		margin-left: auto
		margin-bottom: 0
		width calc(100% - 80px)

.breadcrumb
	color the-breadcrumbs
	font-weight bold
	line-height 1.2
	text-transform: lowercase
	transform-origin: 0 100%
	// white-space: nowrap
	@media (min-width breakpoint-ipad-landscape)
		position absolute
		top auto
		bottom 0
		right auto
		left 0
		transform rotate(-90deg) translate(-100%,100%)
	@media (min-width breakpoint-large)
		transform rotate(-90deg) translate(-100%,0)
	a
		color inherit
		text-decoration none
		&:hover
			color #000

.breadcrumb-current
	color #000
