.image-with-caption
	margin-bottom 100px
	// width calc(100% - 100px)
	@media (min-width breakpoint-ipad)
		margin-bottom 200px
	@media (min-width breakpoint-ipad-landscape)
		margin-left: auto
		margin-right: auto
		width calc(100% - 200px)
	@media (min-width breakpoint-large)
		width 100%
	&.left
		.image-with-caption-image
			@media (min-width breakpoint-large)
				margin-left calc(100% / 12)
	&.right
		.image-with-caption-caption
		.image-with-caption-image
			@media (min-width breakpoint-large)
				margin-left auto
				margin-right @margin-left

.image-with-caption-caption
.image-with-caption-image
	@media (min-width breakpoint-ipad)
		margin-left calc(100% / 12)

.image-with-caption-caption
	max-width 730px

.image-with-caption-image
	// box-shadow the-shadow
	display block
	margin-left auto
	margin-right @margin-left
	margin-bottom: 50px
	max-width 920px
	width 100%
	@media (min-width breakpoint-ipad)
		margin-bottom: 100px
