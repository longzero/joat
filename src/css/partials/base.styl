*
  box-sizing border-box
  margin 0
  padding 0
html
	font-size font-size
	scroll-behavior: smooth;
body
  background-color #000
  color color-copy
  font-family font-default
  font-weight font-weight
  line-height 1.6
button
	cursor: pointer
a
  color color-link
  cursor pointer
h1,h2,h3,h4,h5,h6
	font-family: font-heading
	font-weight: 600
iframe
  display block
iframe,img,video
  max-width 100%
img,video
  height auto
main
  display block
p,ul,ol
  margin-bottom 1em
ul,ol
  margin-left 0
