.navigation-link
	line-height: 1
	transition-duration: .3s
	@media (min-width breakpoint-navigation)
		margin-left: 20px;
	&:hover
		color #fff
	&.button
		&:hover
			color color-1

.site-header
	// background-color #444446
	background-image linear-gradient(to bottom, rgba(0,0,0,.7) 50%, rgba(0,0,0,0));
	padding 20px
	position fixed
	top 0
	left 0
	z-index: layer-navigation
	transition-duration: .3s
	width 100%
	@media (min-width: breakpoint-ipad)
		padding 40px 20px
	.container
		display: flex;
		align-items: center;
		justify-content: space-between
		position: relative
	.scrolled &
		padding: 20px

.site-logo
	height 40px
	@media (min-width: breakpoint-ipad)
		position: absolute
		top 0
		left 0
		transition-duration: .3s;
		height: 100px
	.scrolled &
		top 0
		height 40px

.site-navigation
	background-color #000
	display: flex
	align-items: center
	justify-content: space-around
	flex-direction: column
	font-size: 2em
	opacity: 0
	position: fixed
	top 0
	left 0
	z-index: layer-navigation
	transform translateY(-100%)
	transition-duration: .3s
	width 100vw
	height 100vh
	@media (min-width: breakpoint-ipad)
		background-color transparent
		flex-direction: row
		font-size: 1rem;
		opacity: 1
		position static
		transform translateY(0)
		width auto
		height auto
	> ul
		display: flex;
	a
		text-decoration: none
	ul
		list-style: none;

.navigation-lata
	.burger
		&:before
			transform rotate(45deg)
		&:after
			transform translate(0, -6px) rotate(-45deg)
	.burger-slice
		display: none
	.site-navigation
		opacity: 1
		transform translateY(0)
