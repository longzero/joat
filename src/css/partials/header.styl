.burger
	cursor: pointer
	padding 20px 0 20px 20px
	position: relative
	z-index: layer-navigation + 1
	@media (min-width breakpoint-navigation)
		display: none
	&::before
	&::after
	.burger-slice
		background-color #fff
		border-radius: border-radius
		content ''
		display: block
		margin-bottom: 3px
		transition-duration: .3s
		width 20px
		height 3px

.logo-link
	display: block

